      // ë³´ê¸° ì¹´ë“œ í‘œì‹œ
      const cardsDiv = document.getElementById("cards");
      cardsDiv.innerHTML = "";
      options.forEach(fruit => {
        const card = document.createElement("div");
        card.className = "card";
        card.textContent = fruit;
        card.onclick = () => {
          if (fruit === answer) {
            score++;
            document.getElementById("result").textContent = "âœ… ì •ë‹µì…ë‹ˆë‹¤!";
