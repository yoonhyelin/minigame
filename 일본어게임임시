      document.getElementById("result").textContent = "";
      document.getElementById("progress").textContent = `ë¬¸ì œ ${currentQuestion + 1} / ${totalQuestions}`;

      // ì •ë‹µ ê³¼ì¼ ëœë¤ ì„ íƒ
      const answer = fruits[Math.floor(Math.random() * fruits.length)];

      // ë³´ê¸° 5ê°œ êµ¬ì„± (ì •ë‹µ í¬í•¨)
      let options = [answer];
      while (options.length < 5) {
        const randFruit = fruits[Math.floor(Math.random() * fruits.length)];
        if (!options.includes(randFruit)) options.push(randFruit);
      }
      options.sort(() => Math.random() - 0.5);

      // ì´ë¯¸ì§€ í‘œì‹œ ('images/ê³¼ì¼ëª….png')
      const imageDiv = document.getElementById("image");
